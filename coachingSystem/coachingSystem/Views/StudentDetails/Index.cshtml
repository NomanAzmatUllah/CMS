@model IEnumerable<coachingSystem.Models.tbl_student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

<h2>Student Details</h2>


    <table id="myTable" class="table table-responsive">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Cell
                </th>
                <th>
                    School/College
                </th>
                <th>
                    Group
                </th>
                <th>
                    Admission Date
                </th>
                <th>
                    Class
                </th>
                <th>
                    Subject
                </th>

                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.applicant_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cell)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name_of_college)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.groupp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.date_of_admission)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tbl_class.class_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tbl_subject.sub_name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.stu_id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.stu_id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.stu_id })
                    </td>
                </tr>
            </tbody>
        }

    </table>





<script>

         $(document).ready(function () {
             $("#myTable").DataTable();
         });

</script>