@model coachingSystem.Models.Staf_salary

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}




@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "January",
        Value = "0"
    });
    listItems.Add(new SelectListItem
    {
        Text = "February",
        Value = "1"
    });


    listItems.Add(new SelectListItem
    {
        Text = "March",
        Value = "2"
    });

    listItems.Add(new SelectListItem
    {
        Text = "April",
        Value = "3"
    });

    listItems.Add(new SelectListItem
    {
        Text = "May",
        Value = "4"
    });
    listItems.Add(new SelectListItem
    {
        Text = "June",
        Value = "5"
    });


    listItems.Add(new SelectListItem
    {
        Text = "July",
        Value = "6"
    });

    listItems.Add(new SelectListItem
    {
        Text = "August",
        Value = "7"
    });

    listItems.Add(new SelectListItem
    {
        Text = "Sepemter",
        Value = "8"
    });
    listItems.Add(new SelectListItem
    {
        Text = "October",
        Value = "9"
    });


    listItems.Add(new SelectListItem
    {
        Text = "November",
        Value = "10"
    });

    listItems.Add(new SelectListItem
    {
        Text = "December",
        Value = "11"
    });


}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Staf salary</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Current Date</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CurrentDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CurrentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Month</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.currMonth, listItems, "====Select====", new { @class = "form-control dropdowns " })
                @Html.ValidationMessageFor(model => model.currMonth, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Monthly Salary</label>            <div class="col-md-10">
                @Html.EditorFor(model => model.monthly_salary, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.monthly_salary, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Bonus</label>            <div class="col-md-10">
                @Html.EditorFor(model => model.Bonus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Bonus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Extra Amount</label>            <div class="col-md-10">
                @Html.EditorFor(model => model.extra_Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.extra_Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Staff Name</label>            <div class="col-md-10">
                @Html.DropDownList("Staff_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Staff_id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

