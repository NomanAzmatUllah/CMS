@model IEnumerable<coachingSystem.Models.Fee_structure>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

<h2 style="text-align:center;">Fee-Details</h2>


<table id="myTable" class="table table-responsive table-striped">
    <thead>
        <tr>
            <th>
                Amount
            </th>
            <th>
                Class
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fee_structure_Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_class.class_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.fee_structure_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.fee_structure_id })
            </td>
        </tr>
    </tbody>
}

</table>



<script>

         $(document).ready(function () {
             $("#myTable").DataTable();
         });

</script>