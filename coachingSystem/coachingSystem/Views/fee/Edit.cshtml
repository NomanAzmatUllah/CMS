@model coachingSystem.Models.Fee_structure

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center;">Update Fee Details</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fee_structure_id)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.fee_structure_Amount, new { htmlAttributes = new { @class = "form-control", Placeholder= "Edit-Fee" } })
                @Html.ValidationMessageFor(model => model.fee_structure_Amount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("class_fk_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.class_fk_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
