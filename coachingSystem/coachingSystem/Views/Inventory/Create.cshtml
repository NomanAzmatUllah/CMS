@model coachingSystem.Models.inventory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add Inventory</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.items_name, new { htmlAttributes = new { @class = "form-control",placeholder="Item Name" } })
                @Html.ValidationMessageFor(model => model.items_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.items_quanitity, new { htmlAttributes = new { @class = "form-control",placeholder="Quantity" } })
                @Html.ValidationMessageFor(model => model.items_quanitity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.items_price, new { htmlAttributes = new { @class = "form-control",placeholder="Price" } })
                @Html.ValidationMessageFor(model => model.items_price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
