@model IEnumerable<coachingSystem.Models.inventory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

<h2 class="text-center">Inventory Details</h2>
<table id="myTable" class="table table-responsive table-condensed">
    <thead>
        <tr>
            <th>
                Item Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Price
            </th>
            <th>Action</th>
        </tr>
    </thead>
@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.items_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.items_quanitity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.items_price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.inventory_id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.inventory_id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.inventory_id })
            </td>
        </tr>
    </tbody>
}

</table>


<script>

         $(document).ready(function () {
             $("#myTable").DataTable()
         });

</script>