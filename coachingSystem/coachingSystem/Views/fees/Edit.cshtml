@model coachingSystem.Models.fee

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Update fees</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.fee_id)

        <div class="form-group">
            @Html.LabelFor(model => model.admission_fee_rs, htmlAttributes: new { @class = "control-label col-md-2" })
