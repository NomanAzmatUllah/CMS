@model coachingSystem.Models.tbl_class

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center;">Update-Class</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.class_id)

        <div class="form-group">            <div class="col-md-10">
                @Html.EditorFor(model => model.class_name, new { htmlAttributes = new { @class = "form-control"  }})
                @Html.ValidationMessageFor(model => model.class_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

