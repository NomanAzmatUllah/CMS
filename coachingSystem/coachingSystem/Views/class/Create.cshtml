@model coachingSystem.Models.tbl_class

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Add-Class</h4>
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.class_name, new { htmlAttributes = new { @class = "form-control",placeholder="Add-Class" } })
                @Html.ValidationMessageFor(model => model.class_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default btn-danger" />
            </div>
        </div>
    </div>
}

