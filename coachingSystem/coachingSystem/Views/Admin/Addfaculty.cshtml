                <input type="file" id="imgfile" name="imgfile" class="btn btn-default btn-info" />
                @Html.ValidationMessageFor(model => model.faculty_image, "", new { @class = "text-danger" })
            </div>

        </div>

       
            <div class="col-lg-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
