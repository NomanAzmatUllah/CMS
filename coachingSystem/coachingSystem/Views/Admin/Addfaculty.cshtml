                    @Html.ValidationMessageFor(model => model.father_name, "", new { @class = "text-danger" })
                </div>
            </div>



        <div class="row col-lg-12">
                    <div class="col-lg-6">
                @Html.EditorFor(model => model.cnic, new { htmlAttributes = new { @class = "form-control",placeholder="CNIC" } })
