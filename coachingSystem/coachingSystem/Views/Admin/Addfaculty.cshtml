@model coachingSystem.Models.tbl_faculty_details

@{
    ViewBag.Title = "Addfaculty";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

<style>

    .form-control{

        margin-top:1%;
    }

</style>
@using (Html.BeginForm("Addfaculty", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
