        <h4 style="text-align:center;">Add Faculty </h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
         <div class="row col-lg-12">
            <div class="col-lg-6">
                @Html.EditorFor(model => model.facullty_name, new { htmlAttributes = new { @class = "form-control",placeholder="Name" } })
