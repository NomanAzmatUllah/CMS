                @Html.EditorFor(model => model.instituion, new { htmlAttributes = new { @class = "form-control", placeholder = "School/Institute" } })
                @Html.ValidationMessageFor(model => model.instituion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row col-lg-12">
             <div class="col-lg-6">
                @Html.EditorFor(model => model.experience, new { htmlAttributes = new { @class = "form-control", placeholder = "Experience" } })
