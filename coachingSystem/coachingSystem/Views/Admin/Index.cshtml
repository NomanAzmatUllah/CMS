@model IEnumerable<coachingSystem.Models.tbl_faculty_details>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminpanel.cshtml";
}

<h2 style="text-align:center;">Faculty-Details</h2>

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact-No</th>
            <th>
                Qulification
            </th>
            <th>Image</th>
            <th>Action</th>
        </tr>
    </thead>
@foreach (var item in Model)
{
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.facullty_name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.contact_no)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.qualification)
            </td>

            <td>
                <img src="@Url.Content(item.faculty_image)" style="height:130px;" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.faculty_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.faculty_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.faculty_Id })
            </td>
        </tr>
    </tbody>
}

</table>



<script>

         $(document).ready(function () {
             $("#myTable").DataTable();
         });

</script>